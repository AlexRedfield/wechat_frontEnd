<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'onTop' : ''}}" data-current="0" bindtap="swichNav">我是顾客</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'onTop' : ''}}" data-current="1" bindtap="swichNav">我是商家</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

  <!-- 我是顾客 -->
  <swiper-item>
    <view class="main">
      <view class="categroy-left">
        <view wx:for="{{category}}" wx:key="index" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchTab" class="cate-list {{curIndex == index?'on':''}}">{{item.name}}</view>
      </view>

      <scroll-view class="categroy-right" scroll-y="{{isScroll}}" scroll-into-view="{{toView}}" scroll-with-animation="true" bindscroll="scrollMove">
        <block wx:if="{{curIndex==0}}" wx:for="{{taskInfo}}" wx:key="index">
          <view class='projectbox'>
            <!--第一部分  -->
            <view class='project'>
              <!-- <navigator url='../details/details?img={{taskImg}}&user={{user}}'> -->
              <navigator url='../details/details?img={{item.img}}&user={{item.nickname}}&info={{item.info}}&title={{item.name}}&avatar={{item.avatar}}&price={{item.price}}'>
                <image class='headimage' src='/img/{{item.img}}'></image>
                <view class='projecttext'>
                  <text class='biaoti'>{{item.name}}</text>
                  <text class='jianjie'>{{item.info}}</text>
                  <image class='line1'></image>

                  <view class='field'>
                    <image class='shop' src='/image/shop.jpg'></image>
                    <text class='owner'>{{item.nickname}}</text>
                  </view>

                </view>

                <view class='num'>{{item.price}}
                  <text class='danwei'>以太币</text>
                </view>
              </navigator>
            </view>

          </view>
        </block>


        <block wx:if="{{curIndex==2}}" wx:for="{{taskInfo}}" wx:key="index">
          <view class='projectbox'>
            <!--第一部分  -->
            <view class='project'>
              <!-- <navigator url='../details/details?img={{taskImg}}&user={{user}}'> -->
              <navigator url='../details/details?img={{item.img}}&user={{item.nickname}}&info={{item.info}}&title={{item.name}}&avatar={{item.avatar}}&price={{item.price}}'>
                <image class='headimage' src='/img/{{item.img}}'></image>
                <view class='projecttext'>
                  <text class='biaoti'>{{item.name}}</text>
                  <text class='jianjie'>{{item.info}}</text>
                  <image class='line1'></image>

                  <view class='field'>
                    <image class='shop' src='/image/shop.jpg'></image>
                    <text class='owner'>{{item.nickname}}</text>
                  </view>

                </view>

                <view class='num'>{{item.price}}
                  <text class='danwei'>以太币</text>
                </view>
              </navigator>
            </view>

          </view>
        </block>

      </scroll-view>

    </view>
  </swiper-item>

  <!-- 我是商家 -->
  <swiper-item>
    <view class="main">
      <view class="categroy-left">
        <view wx:for="{{category}}" wx:key="index" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchTab" class="cate-list {{curIndex == index?'on':''}}">{{item.name}}</view>
      </view>

      <scroll-view class="categroy-right" scroll-y="{{isScroll}}" scroll-into-view="{{toView}}" scroll-with-animation="true" bindscroll="scrollMove">
        <block wx:for="{{detail}}" wx:for-index wx:key="id">
          <view id="{{item.id}}" class="cate-box">
            <view class="cate-banner">
              <image src="{{item.banner}}"></image>
            </view>
            <view class="cate-title">
              <text>{{item.cate}}</text>
            </view>
            <view class="product">
              <view class="product-list" wx:for="{{item.detail}}" wx:key="index" wx:for-item="val">
                <navigator url="../list/list">
                  <image src="{{val.thumb}}"></image>
                  <view class="classname">
                    <text>{{val.name}}</text>
                  </view>
                </navigator>
              </view>
            </view>
          </view>
        </block>
      </scroll-view>

    </view>
  </swiper-item>

</swiper>