@import '../../common/common.wxss';

.swiper-tab{ height: 30px; line-height: 30px; background: #FFF; display: flex; position: relative; z-index: 2; border-bottom: 1px solid #F4F4F4; flex-direction:row; justify-content:center; align-items:center;}
.swiper-tab-list{ margin: 0 20px;  padding: 0 4px; font-size: 28rpx; font-family: Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif }
.onTop{ border-bottom: 1px solid #AB956D; color: #AB956D; }

page,.main{
    height: 100%;
}

.projectbox {
  padding: 0rpx 20rpx;
  position: relative;
}

/*订单列表*/
.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}

.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  color:#AB956D;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}
 

.orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}

.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .productTime {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
  color:#8f8888;
}

.productPrice {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  font-size: 35rpx;
  color:crimson;
}

.danwei {
  font-size: 20rpx;
  color:crimson;
}

.address {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 80rpx;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}

.btn {
  position:relative;
  float: right;
  bottom:70rpx;
  width: 22%;
  height: 60rpx;
  font-size:12px;
  background-color: #FFF;
  color: rgb(238, 20, 20);
  border:1rpx solid #ee2929
}